Â  Â  Â  Â  // Generate a mock value based on dataset

Â  Â  Â  Â  function generateMockValue(dataset) {

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (Math.random() * 40 - 10).toFixed(2); // -10 to 30Â°C

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (Math.random() * 0.8 + 0.2).toFixed(3); // 0.2 to 1.0

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (Math.random() * 1.0).toFixed(3); // 0 to 1.0

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (Math.random() * 50).toFixed(2); // 0 to 50 g/kg

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (Math.random() * 100).toFixed(1); // 0 to 100%

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (Math.random() * 100).toFixed(2);

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  // Get unit for dataset

Â  Â  Â  Â  function getUnitForDataset(dataset) {

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Â°C';

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'NDVI';

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'AOD';

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'g/kg';

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return '%';

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'units';

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

