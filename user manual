Â  Â  Â  Â  // Fetch temperature data for specific location

Â  Â  Â  Â  async function fetchTemperatureForLocation(lat, lon, date) {

Â  Â  Â  Â  Â  Â  try {

Â  Â  Â  Â  Â  Â  Â  Â  // Using NASA POWER API for temperature data

Â  Â  Â  Â  Â  Â  Â  Â  const startDate = new Date(date);

Â  Â  Â  Â  Â  Â  Â  Â  const endDate = new Date(date);

Â  Â  Â  Â  Â  Â  Â  Â  endDate.setDate(endDate.getDate() + 1);

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const url = `https://power.larc.nasa.gov/api/temporal/daily/point?start=${formatDateForAPI(startDate)}&end=${formatDateForAPI(endDate)}&latitude=${lat}&longitude=${lon}&community=SB&parameters=T2M&format=JSON`;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const response = await fetch(url);

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  if (!response.ok) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  throw new Error(`NASA POWER API request failed: ${response.status}`);

Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const data = await response.json();

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  if (data && data.properties && data.properties.parameter && data.properties.parameter.T2M) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const tempData = data.properties.parameter.T2M;

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const dateKey = formatDateForAPI(startDate);

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const temperature = tempData[dateKey];

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  value: temperature ? temperature.toFixed(2) : generateMockValue('temperature'),

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  unit: 'Â°C',

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  quality: 'Good'

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  };

Â  Â  Â  Â  Â  Â  Â  Â  } else {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  throw new Error('Invalid temperature data format');

Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  } catch (error) {

Â  Â  Â  Â  Â  Â  Â  Â  console.error('Error fetching temperature data:', error);

Â  Â  Â  Â  Â  Â  Â  Â  throw error;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

