Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  function onTouchMove(event) {

Â  Â  Â  Â  Â  Â  if (event.touches.length === 1 && isMouseDown) {

Â  Â  Â  Â  Â  Â  Â  Â  event.preventDefault();

Â  Â  Â  Â  Â  Â  Â  Â  const deltaMove = {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  x: event.touches[0].clientX - previousMousePosition.x,

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  y: event.touches[0].clientY - previousMousePosition.y

Â  Â  Â  Â  Â  Â  Â  Â  };

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  targetRotationY += deltaMove.x * 0.01;

Â  Â  Â  Â  Â  Â  Â  Â  targetRotationX += deltaMove.y * 0.01;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  previousMousePosition = {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  x: event.touches[0].clientX,

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  y: event.touches[0].clientY

Â  Â  Â  Â  Â  Â  Â  Â  };

Â  Â  Â  Â  Â  Â  }

