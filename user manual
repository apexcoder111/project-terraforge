Â  Â  Â  Â  function init3DEarth() {

Â  Â  Â  Â  Â  Â  const container = document.getElementById('globe-container');

Â  Â  Â  Â  Â  Â  const width = container.clientWidth;

Â  Â  Â  Â  Â  Â  const height = container.clientHeight;

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Create scene

Â  Â  Â  Â  Â  Â  scene = new THREE.Scene();

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Create camera

Â  Â  Â  Â  Â  Â  camera = new THREE.PerspectiveCamera(45, width / height, 0.1, 1000);

Â  Â  Â  Â  Â  Â  camera.position.z = 2.5;

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Create renderer

Â  Â  Â  Â  Â  Â  renderer = new THREE.WebGLRenderer({ antialias: true, alpha: true });

Â  Â  Â  Â  Â  Â  renderer.setSize(width, height);

Â  Â  Â  Â  Â  Â  renderer.setClearColor(0x000000, 0);

Â  Â  Â  Â  Â  Â  container.appendChild(renderer.domElement);

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Create Earth group

Â  Â  Â  Â  Â  Â  earthGroup = new THREE.Group();

Â  Â  Â  Â  Â  Â  scene.add(earthGroup);

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Create Earth

Â  Â  Â  Â  Â  Â  const geometry = new THREE.SphereGeometry(1, 64, 64);

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Load Earth texture

Â  Â  Â  Â  Â  Â  const textureLoader = new THREE.TextureLoader();

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Use a proper Earth texture URL

Â  Â  Â  Â  Â  Â  const earthTexture = textureLoader.load('https://raw.githubusercontent.com/mrdoob/three.js/dev/examples/textures/planets/earth_atmos_2048.jpg');

Â  Â  Â  Â  Â  Â  const earthSpecularMap = textureLoader.load('https://raw.githubusercontent.com/mrdoob/three.js/dev/examples/textures/planets/earth_specular_2048.jpg');

Â  Â  Â  Â  Â  Â  const earthNormalMap = textureLoader.load('https://raw.githubusercontent.com/mrdoob/three.js/dev/examples/textures/planets/earth_normal_2048.jpg');

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  const material = new THREE.MeshPhongMaterial({

Â  Â  Â  Â  Â  Â  Â  Â  map: earthTexture,

Â  Â  Â  Â  Â  Â  Â  Â  specularMap: earthSpecularMap,

Â  Â  Â  Â  Â  Â  Â  Â  normalMap: earthNormalMap,

