Â  Â  Â  Â  // Display query results

Â  Â  Â  Â  function displayQueryResult(data, date, location, lat, lon, dataset) {

Â  Â  Â  Â  Â  Â  // Update result elements

Â  Â  Â  Â  Â  Â  document.getElementById('resultTitle').textContent = 'Query Results';

Â  Â  Â  Â  Â  Â  document.getElementById('resultDate').textContent = new Date(date).toLocaleDateString('en-US', {Â 

Â  Â  Â  Â  Â  Â  Â  Â  year: 'numeric',Â 

Â  Â  Â  Â  Â  Â  Â  Â  month: 'long',Â 

Â  Â  Â  Â  Â  Â  Â  Â  day: 'numeric'Â 

Â  Â  Â  Â  Â  Â  });

Â  Â  Â  Â  Â  Â  document.getElementById('resultLocation').textContent = location;

Â  Â  Â  Â  Â  Â  document.getElementById('resultCoords').textContent = `${lat.toFixed(4)}Â°, ${lon.toFixed(4)}Â°`;

Â  Â  Â  Â  Â  Â  document.getElementById('resultDataset').textContent = formatDatasetName(dataset);

Â  Â  Â  Â  Â  Â  document.getElementById('resultValue').textContent = data.value;

Â  Â  Â  Â  Â  Â  document.getElementById('resultUnit').textContent = data.unit;

Â  Â  Â  Â  Â  Â  document.getElementById('resultQuality').textContent = data.quality;

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Show the result section

Â  Â  Â  Â  Â  Â  document.getElementById('queryResult').classList.add('active');

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Scroll to results

Â  Â  Â  Â  Â  Â  setTimeout(() => {

Â  Â  Â  Â  Â  Â  Â  Â  document.getElementById('queryResult').scrollIntoView({Â 

