Â  Â  Â  Â  // Fetch location name using Nominatim API

Â  Â  Â  Â  async function fetchLocationName(lat, lng) {

Â  Â  Â  Â  Â  Â  try {

Â  Â  Â  Â  Â  Â  Â  Â  const response = await fetch(`https://nominatim.openstreetmap.org/reverse?format=json&lat=${lat}&lon=${lng}`);

Â  Â  Â  Â  Â  Â  Â  Â  const data = await response.json();

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  if (data && data.display_name) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // Use the city or town name if available, otherwise use the full display name

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const locationName = data.address.city || data.address.town || data.address.county || data.display_name.split(',')[0];

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  document.getElementById('location').value = locationName;

Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  } catch (error) {

Â  Â  Â  Â  Â  Â  Â  Â  console.error('Error fetching location name:', error);

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

