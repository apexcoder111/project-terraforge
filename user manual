Â  Â  Â  Â  // Fetch temperature data for specific location

Â  Â  Â  Â  async function fetchTemperatureForLocation(lat, lon, date) {

Â  Â  Â  Â  Â  Â  try {

Â  Â  Â  Â  Â  Â  Â  Â  // Using NASA POWER API for temperature data

Â  Â  Â  Â  Â  Â  Â  Â  const startDate = new Date(date);

Â  Â  Â  Â  Â  Â  Â  Â  const endDate = new Date(date);

Â  Â  Â  Â  Â  Â  Â  Â  endDate.setDate(endDate.getDate() + 1);

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // Format date as YYYYMMDD

Â  Â  Â  Â  Â  Â  Â  Â  const startDateStr = `${startDate.getFullYear()}${String(startDate.getMonth() + 1).padStart(2, '0')}${String(startDate.getDate()).padStart(2, '0')}`;

Â  Â  Â  Â  Â  Â  Â  Â  const endDateStr = `${endDate.getFullYear()}${String(endDate.getMonth() + 1).padStart(2, '0')}${String(endDate.getDate()).padStart(2, '0')}`;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const url = `https://power.larc.nasa.gov/api/temporal/daily/point?start=${startDateStr}&end=${endDateStr}&latitude=${lat}&longitude=${lon}&community=SB&parameters=T2M&format=JSON`;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const response = await fetch(url);

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  if (!response.ok) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  throw new Error(`NASA POWER API request failed: ${response.status}`);

Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const data = await response.json();

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // Check if the response has the expected structure

Â  Â  Â  Â  Â  Â  Â  Â  if (data && data.properties && data.properties.parameter && data.properties.parameter.T2M) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const tempData = data.properties.parameter.T2M;

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // Try to get the temperature for the specific date

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  let temperature = tempData[startDateStr];

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // If the exact date is not available, try to get any available temperature

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  if (!temperature) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  const availableDates = Object.keys(tempData);

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  if (availableDates.length > 0) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  temperature = tempData[availableDates[0]];

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  if (temperature !== undefined && temperature !== null) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  value: temperature.toFixed(2),

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  unit: 'Â°C',

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  quality: 'Good'

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  };

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // If we couldn't get valid temperature data, use mock data

Â  Â  Â  Â  Â  Â  Â  Â  return {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  value: generateMockValue('temperature'),

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  unit: 'Â°C',

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  quality: 'Estimated'

Â  Â  Â  Â  Â  Â  Â  Â  };

Â  Â  Â  Â  Â  Â  } catch (error) {

Â  Â  Â  Â  Â  Â  Â  Â  console.error('Error fetching temperature data:', error);

Â  Â  Â  Â  Â  Â  Â  Â  // Return mock data if API fails

Â  Â  Â  Â  Â  Â  Â  Â  return {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  value: generateMockValue('temperature'),

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  unit: 'Â°C',

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  quality: 'Estimated'

