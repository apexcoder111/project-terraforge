Â  Â  Â  Â  function onMouseWheel(event) {

Â  Â  Â  Â  Â  Â  event.preventDefault();

Â  Â  Â  Â  Â  Â  const delta = event.deltaY * 0.001;

Â  Â  Â  Â  Â  Â  camera.position.z = Math.max(1.5, Math.min(4, camera.position.z + delta));

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  function animate3DEarth() {

Â  Â  Â  Â  Â  Â  requestAnimationFrame(animate3DEarth);

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Auto-rotate when not interacting

Â  Â  Â  Â  Â  Â  if (!isMouseDown) {

Â  Â  Â  Â  Â  Â  Â  Â  targetRotationY += 0.002;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Smooth rotation

Â  Â  Â  Â  Â  Â  earthGroup.rotation.x += (targetRotationX - earthGroup.rotation.x) * 0.05;

Â  Â  Â  Â  Â  Â  earthGroup.rotation.y += (targetRotationY - earthGroup.rotation.y) * 0.05;

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Limit vertical rotation

Â  Â  Â  Â  Â  Â  earthGroup.rotation.x = Math.max(-Math.PI / 2, Math.min(Math.PI / 2, earthGroup.rotation.x));

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Rotate clouds slightly faster than Earth

Â  Â  Â  Â  Â  Â  if (clouds) {

Â  Â  Â  Â  Â  Â  Â  Â  clouds.rotation.y += 0.0005;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  renderer.render(scene, camera);

Â  Â  Â  Â  }

