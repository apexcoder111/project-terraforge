Â  Â  Â  Â  // Normalize value for dataset

Â  Â  Â  Â  function normalizeValueForDataset(dataset, value) {

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // Normalize temperature (-10 to 30Â°C) to 0-1 range

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return (parseFloat(value) + 10) / 40;

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // NDVI is already in 0-1 range

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return parseFloat(value);

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // Normalize water vapor (0-50 g/kg) to 0-1 range

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return parseFloat(value) / 50;

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // AOD is already in 0-1 range

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return parseFloat(value);

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  // Normalize clouds (0-100%) to 0-1 range

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return parseFloat(value) / 100;

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 0.5;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  // Format value for display

Â  Â  Â  Â  function formatValueForDataset(dataset, value, isLow = false) {

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return isLow ? `${parseFloat(value).toFixed(2)}Â°C` : `${parseFloat(value).toFixed(2)}Â°C`;

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return isLow ? `${parseFloat(value).toFixed(3)}` : `${parseFloat(value).toFixed(3)}`;

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return isLow ? `${parseFloat(value).toFixed(2)} g/kg` : `${parseFloat(value).toFixed(2)} g/kg`;

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return isLow ? `${parseFloat(value).toFixed(3)}` : `${parseFloat(value).toFixed(3)}`;

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return isLow ? `${parseFloat(value).toFixed(1)}%` : `${parseFloat(value).toFixed(1)}%`;

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return value;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  // Format dataset name for display

Â  Â  Â  Â  function formatDatasetName(dataset) {

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Temperature';

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Vegetation Index';

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Aerosol Optical Depth';

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Water Vapor';

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Cloud Properties';

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return dataset;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  // Create pixel visualization

Â  Â  Â  Â  function createPixelVisualization(normalizedValue) {

Â  Â  Â  Â  Â  Â  const pixelsContainer = document.getElementById('dataPixels');

Â  Â  Â  Â  Â  Â  pixelsContainer.innerHTML = '';

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Create 100 pixels in a 10x10 grid

Â  Â  Â  Â  Â  Â  for (let i = 0; i < 100; i++) {

Â  Â  Â  Â  Â  Â  Â  Â  const pixel = document.createElement('div');

Â  Â  Â  Â  Â  Â  Â  Â  pixel.classList.add('data-pixel');

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // Calculate position in grid

Â  Â  Â  Â  Â  Â  Â  Â  const row = Math.floor(i / 10);

Â  Â  Â  Â  Â  Â  Â  Â  const col = i % 10;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // Position pixel in grid

Â  Â  Â  Â  Â  Â  Â  Â  pixel.style.position = 'absolute';

Â  Â  Â  Â  Â  Â  Â  Â  pixel.style.left = `${col * 10}%`;

Â  Â  Â  Â  Â  Â  Â  Â  pixel.style.top = `${row * 10}%`;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // Color based on value (0-1 range)

Â  Â  Â  Â  Â  Â  Â  Â  const hue = (1 - normalizedValue) * 240; // Red to blue

Â  Â  Â  Â  Â  Â  Â  Â  const lightness = 0.3 + (1 - normalizedValue) * 0.7;

Â  Â  Â  Â  Â  Â  Â  Â  pixel.style.backgroundColor = `hsl(${hue}, 70%, ${lightness * 100}%, 50%)`;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  pixelsContainer.appendChild(pixel);

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

