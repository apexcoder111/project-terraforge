Â  Â  Â  Â  // Format dataset name for display

Â  Â  Â  Â  function formatDatasetName(dataset) {

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Land Surface Temperature';

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Vegetation Index (NDVI)';

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Aerosol Optical Depth';

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Atmospheric Water Vapor';

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return 'Cloud Properties';

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  return dataset;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

