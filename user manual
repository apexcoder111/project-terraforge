Â  Â  Â  Â  Â  Â  const maxValue = document.getElementById('maxValue');

Â  Â  Â  Â  Â  Â  const minValue = document.getElementById('minValue');

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Update the gradient based on dataset type

Â  Â  Â  Â  Â  Â  let gradientColors;

Â  Â  Â  Â  Â  Â  switch(dataset) {

Â  Â  Â  Â  Â  Â  Â  Â  case 'temperature':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  gradientColors = 'linear-gradient(90deg, #0377ff, #ff0000)';

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  break;

Â  Â  Â  Â  Â  Â  Â  Â  case 'vegetation':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  gradientColors = 'linear-gradient(90deg, #8bc34a, #1b5e20)';

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  break;

Â  Â  Â  Â  Â  Â  Â  Â  case 'water_vapor':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  gradientColors = 'linear-gradient(90deg, #03a9f4, #01579b)';

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  break;

Â  Â  Â  Â  Â  Â  Â  Â  case 'aerosol':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  gradientColors = 'linear-gradient(90deg, #9e9e9e, #546e7a)';

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  break;

Â  Â  Â  Â  Â  Â  Â  Â  case 'clouds':

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  gradientColors = 'linear-gradient(90deg, #ffffff, #e0e0e0)';

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  break;

Â  Â  Â  Â  Â  Â  Â  Â  default:

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  gradientColors = 'linear-gradient(90deg, #4fc3f7, #29b6f6)';

Â  Â  Â  Â  Â  Â  }

