Â  Â  Â  Â  function animateDataGlobe() {

Â  Â  Â  Â  Â  Â  requestAnimationFrame(animateDataGlobe);

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Auto-rotate when not interacting

Â  Â  Â  Â  Â  Â  if (!dataIsMouseDown) {

Â  Â  Â  Â  Â  Â  Â  Â  dataTargetRotationY += 0.002;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Smooth rotation

Â  Â  Â  Â  Â  Â  dataEarthGroup.rotation.x += (dataTargetRotationX - dataEarthGroup.rotation.x) * 0.05;

Â  Â  Â  Â  Â  Â  dataEarthGroup.rotation.y += (dataTargetRotationY - dataEarthGroup.rotation.y) * 0.05;

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Limit vertical rotation

Â  Â  Â  Â  Â  Â  dataEarthGroup.rotation.x = Math.max(-Math.PI / 2, Math.min(Math.PI / 2, dataEarthGroup.rotation.x));

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Rotate clouds slightly faster than Earth

Â  Â  Â  Â  Â  Â  if (dataClouds) {

Â  Â  Â  Â  Â  Â  Â  Â  dataClouds.rotation.y += 0.0005;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Animate active data layer

Â  Â  Â  Â  Â  Â  if (activeDataset && dataLayers[activeDataset]) {

Â  Â  Â  Â  Â  Â  Â  Â  // Add subtle pulsing effect to the active layer

Â  Â  Â  Â  Â  Â  Â  Â  const time = Date.now() * 0.001;

Â  Â  Â  Â  Â  Â  Â  Â  const pulseFactor = 0.05 * Math.sin(time * 2);

Â  Â  Â  Â  Â  Â  Â  Â  const baseScale = 1.0 + (Object.keys(dataLayers).indexOf(activeDataset) * 0.01);

Â  Â  Â  Â  Â  Â  Â  Â  dataLayers[activeDataset].scale.set(baseScale + pulseFactor, baseScale + pulseFactor, baseScale + pulseFactor);

Â  Â  Â  Â  Â  Â  }

