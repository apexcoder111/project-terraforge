Â  Â  Â  Â  // Fetch GISTEMP temperature data

Â  Â  Â  Â  async function fetchGISTEMPTemperatureData() {

Â  Â  Â  Â  Â  Â  try {

Â  Â  Â  Â  Â  Â  Â  Â  const response = await fetch(GISS_API_URL);

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  if (!response.ok) {

Â  Â  Â  Â  Â  Â  Â  Â  Â  Â  throw new Error(`GISS API request failed: ${response.status}`);

Â  Â  Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const csvData = await response.text();

Â  Â  Â  Â  Â  Â  Â  Â  return parseGISTEMPCSV(csvData);

Â  Â  Â  Â  Â  Â  } catch (error) {

Â  Â  Â  Â  Â  Â  Â  Â  console.error('Error fetching GISTEMP data:', error);

Â  Â  Â  Â  Â  Â  Â  Â  throw error;

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  }

Â  Â  Â  Â Â 

Â  Â  Â  Â  // Parse GISTEMP CSV data

Â  Â  Â  Â  function parseGISTEMPCSV(csvData) {

Â  Â  Â  Â  Â  Â  const lines = csvData.split('\n');

Â  Â  Â  Â  Â  Â  const labels = [];

Â  Â  Â  Â  Â  Â  const data = [];

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  // Skip header lines and parse data

Â  Â  Â  Â  Â  Â  for (let i = 7; i < lines.length; i++) {

Â  Â  Â  Â  Â  Â  Â  Â  const line = lines[i].trim();

Â  Â  Â  Â  Â  Â  Â  Â  if (!line) continue;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const parts = line.split(',');

Â  Â  Â  Â  Â  Â  Â  Â  if (parts.length < 13) continue;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  const year = parts[0];

Â  Â  Â  Â  Â  Â  Â  Â  if (year < '1999' || year > '2023') continue;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  // Get annual mean (column 13)

Â  Â  Â  Â  Â  Â  Â  Â  const value = parseFloat(parts[12]);

Â  Â  Â  Â  Â  Â  Â  Â  if (isNaN(value)) continue;

Â  Â  Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  Â  Â  labels.push(year);

Â  Â  Â  Â  Â  Â  Â  Â  data.push(value);

Â  Â  Â  Â  Â  Â  }

Â  Â  Â  Â  Â  Â Â 

Â  Â  Â  Â  Â  Â  return { labels, data };

Â  Â  Â  Â  }

